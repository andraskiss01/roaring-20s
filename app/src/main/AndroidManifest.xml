<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ak17apps.roaring20s">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".layout.MainActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".layout.PersonnelActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".layout.FleetActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".layout.PortsStationsActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".layout.ManufactureStorageSaleActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".layout.BuyProduceActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".layout.OnWayActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />

        <activity android:name=".layout.SellActivity"
            android:screenOrientation="landscape"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>